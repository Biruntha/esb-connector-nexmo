<component name="nexmo-message" type="synapse/template">
    <subComponents>
        <component name="sendMessage">
            <file>sendMessage.xml</file>
            <description>Send a message.</description>
        </component>
        <component name="searchMessage">
            <file>searchMessage.xml</file>
            <description>Search a previously sent message for a given message id.</description>
        </component>
        <component name="searchMessages">
            <file>searchMessages.xml</file>
            <description>Search sent messages.</description>
        </component>
        <component name="searchRejectedMessages">
            <file>searchRejectedMessages.xml</file>
            <description>Search rejected messages.</description>
        </component>
    </subComponents>
</component>